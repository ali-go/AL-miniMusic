/* components/song-menu-item/index.wxss */

.item{
  /* width: 220rpx; */
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
  
}
.top{
  position: relative;
}
.top .play-counter{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: #000;
  opacity: 0.8;
  padding: 2rpx;
}
.top .image{
  vertical-align: top;
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}
.bottom{
  margin-top: 10rpx;
  font-size: 24rpx;
  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  overflow: hidden;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
}